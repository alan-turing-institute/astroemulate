---
import { getCollection } from "astro:content";
import Navbar from "../components/Navbar.astro";

const posts = await getCollection("blog");
---

<html>
    <body>
        <Navbar />
        <h1>Blog</h1>
        <ul>
            {
                posts.map((post) => (
                    <li>
                        <a href={post.url}>{post.data.title}</a> -{" "}
                        {post.data.pubDate}
                    </li>
                ))
            }
        </ul>
    </body>
</html>
