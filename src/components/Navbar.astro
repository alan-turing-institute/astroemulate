---
import logo from "../assets/autoemulate_logo_no_grid.png";
---

<nav class="navbar" id="navbar">
    <a href="/" style="color: inherit; text-decoration: none;">
        <img src={logo.src} width="100" alt="AutoEmulate Logo" />
        <sub class="navbar-logo-text"><b>utoEmulate</b></sub>
    </a>
    <div class="navbar-right">
        <a
            href="https://alan-turing-institute.github.io/autoemulate/index.html"
            target="_blank">Documentation</a
        >
        <a
            href="https://joss.theoj.org/papers/10.21105/joss.07626"
            target="_blank">JOSS Paper</a
        >
        <a
            href="https://github.com/alan-turing-institute/autoemulate"
            target="_blank">GitHub</a
        >
        <a href="/team">Who we are</a>
        <a
            href="https://alan-turing-institute.github.io/gp-demo/"
            target="_blank">What is emulation?</a
        >
        <a
            href="/blog"
            target="_blank">Blog</a
        >
        
    </div>
</nav>

<style>
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px 20px;
        background-color: rgba(255, 255, 255, 0.8);
        transition: top 0.3s;
    }

    .navbar-right {
        display: flex;
        gap: 20px;
        white-space: nowrap;
        padding-right: 10%;
        font-size: 20px;
    }

    .navbar-right a {
        color: black;
        text-decoration: none;
    }

    .navbar-right a:hover {
        color: purple;
    }

    .navbar.hidden {
        top: -100px;
    }

    .navbar-logo-text {
        position: absolute;
        bottom: 40%;
        left: 110px;
        font-size: 36px; /* Increase font size */
        letter-spacing: 1px; /* Add slight letter spacing for better readability */
        transform: translateY(8px); /* Adjust vertical position */
    }

    @media screen and (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: flex-start;
            padding: 10px;
        }

        .navbar-right {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
            padding-right: 0;
            width: 100%;
            font-size: 16px;
        }

        .navbar-right a {
            padding: 10px 0;
            width: 100%;
            text-align: left;
        }

        .navbar-logo-text {
            position: static;
            margin-left: 10px;
            font-size: 24px; /* Keep consistent font size on mobile */
        }
    }
</style>

<script>
    window.addEventListener("scroll", function () {
        const navbar = document.getElementById("navbar");
        if (window.scrollY > window.innerHeight / 2) {
            navbar.classList.add("hidden");
        } else {
            navbar.classList.remove("hidden");
        }
    });
</script>
