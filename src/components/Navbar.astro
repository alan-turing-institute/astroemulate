---
import logo from "../assets/autoemulate_logo_no_grid.png";
---

<nav class="navbar" id="navbar">
    <a
        class="homelink desktop-only"
        href="/"
        style="color: inherit; text-decoration: none;"
    >
        <img src={logo.src} width="100" alt="AutoEmulate Logo" />
        <sub class="navbar-logo-text"><b>utoEmulate</b></sub>
    </a>
    <button class="hamburger" id="hamburger" aria-label="Toggle navigation">
        &#9776;
    </button>
    <div class="navbar-right" id="navbar-right">
        <a class="mobile-only" href="/">Home</a>
        <a href="/team">Team</a>
        <a href="/blog">Blog</a>
        <div class="dropdown">
            <button class="dropbtn" id="resources-btn">
                Info
                <span class="arrow" id="resources-arrow">&#9654;</span>
            </button>
            <div class="dropdown-content" id="resources-dropdown">
                <a
                    href="https://alan-turing-institute.github.io/autoemulate/index.html"
                    target="_blank">Documentation</a
                >
                <a
                    href="https://joss.theoj.org/papers/10.21105/joss.07626"
                    target="_blank">JOSS Paper</a
                >
                <a
                    href="https://github.com/alan-turing-institute/autoemulate"
                    target="_blank">GitHub</a
                >
                <a
                    href="https://pypi.org/project/autoemulate"
                    target="_blank">PyPI</a
                >
                <a
                    href="https://alan-turing-institute.github.io/gp-demo/"
                    target="_blank">What is emulation?</a
                >
            </div>
        </div>
    </div>
</nav>

<style>
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px 20px;
        background-color: rgba(255, 255, 255, 0.8);
        transition: top 0.3s;
    }

    .navbar-right {
        display: flex;
        gap: 20px;
        white-space: nowrap;
        padding-right: 10%;
        font-size: 20px;
    }

    .navbar-right a {
        color: black;
        text-decoration: none;
    }

    .navbar-right a:hover {
        color: purple;
    }

    .navbar.hidden {
        top: -100px;
    }

    .navbar-logo-text {
        position: absolute;
        bottom: 40%;
        left: 110px;
        font-size: 36px;
        letter-spacing: 1px;
        transform: translateY(8px);
    }

    .hamburger {
        display: none;
        font-size: 24px;
        background: none;
        border: none;
        cursor: pointer;
        position: absolute; /* Position it within the navbar */
        top: 50%; /* Center vertically */
        right: 20px; /* Align to the right */
        transform: translateY(-50%); /* Adjust for vertical centering */
        z-index: 1100; /* Ensure it stays above other elements */
    }

    .desktop-only {
        display: block;
    }

    .mobile-only {
        display: none;
    }

    @media screen and (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: flex-start;
            padding: 10px;
        }

        .navbar-right {
            display: none;
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
            padding-right: 0;
            width: 100%;
            font-size: 16px;
        }

        .navbar-right a {
            padding: 10px 0;
            width: 100%;
            text-align: left;
        }

        .navbar-right.active {
            display: flex;
        }

        .navbar-logo-text {
            position: static;
            margin-left: 10px;
            font-size: 24px;
        }

        .hamburger {
            display: block;
        }

        .desktop-only {
            display: none;
        }

        .mobile-only {
            display: block;
        }
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropbtn {
        background: none;
        border: none;
        font-size: 20px;
        cursor: pointer;
        color: black;
        padding: 0;
    }

    .dropbtn:hover {
        color: purple;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #fff;
        min-width: 180px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.1);
        z-index: 1200;
        flex-direction: column;
    }

    .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        font-size: 18px;
    }

    .dropdown-content a:hover {
        background-color: #f1f1f1;
        color: purple;
    }

    .dropdown:hover .dropdown-content {
        display: flex;
    }

    @media screen and (max-width: 768px) {
        .dropdown-content {
            position: static;
            box-shadow: none;
            min-width: 0;
        }
        .dropbtn {
            font-size: 16px;
            width: 100%;
            text-align: left;
            padding: 10px 0;
        }
        .dropdown-content a {
            font-size: 16px;
            padding: 10px 0 10px 20px;
        }
    }
    .arrow {
        display: inline-block;
        margin-left: 6px;
        transition: transform 0.2s;
        font-size: 0.8em;
        vertical-align: middle;
    }
    .dropdown.open .arrow {
        transform: rotate(90deg);
    }
</style>

<script>
    const hamburger = document.getElementById("hamburger");
    const navbarRight = document.getElementById("navbar-right");

    hamburger.addEventListener("click", () => {
        navbarRight.classList.toggle("active");
    });

    window.addEventListener("scroll", function () {
        const navbar = document.getElementById("navbar");
        if (window.scrollY > window.innerHeight / 2) {
            navbar.classList.add("hidden");
        } else {
            navbar.classList.remove("hidden");
        }
    });

    // Dropdown arrow on hover
    const resourcesBtn = document.getElementById("resources-btn");
    const dropdown = resourcesBtn.parentElement;

    resourcesBtn.addEventListener("mouseenter", () => {
        dropdown.classList.add("open");
    });
    resourcesBtn.addEventListener("mouseleave", () => {
        dropdown.classList.remove("open");
    });
    // Also handle hover on dropdown-content so it stays open when moving to links
    const resourcesDropdown = document.getElementById("resources-dropdown");
    resourcesDropdown.addEventListener("mouseenter", () => {
        dropdown.classList.add("open");
    });
    resourcesDropdown.addEventListener("mouseleave", () => {
        dropdown.classList.remove("open");
    });
</script>
